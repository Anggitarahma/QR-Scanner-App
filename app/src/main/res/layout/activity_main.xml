<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //deklarasi kamera scanner dari library yang telah di implementasi, atur besar dan constraint layout
    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    //deklarasi textView untuk menampilkan teks hasil scan code QR
    <TextView
        android:id="@+id/textQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/textqr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_view" />

    //deklarasi tombol Copy
    <Button
        android:id="@+id/btnCopy"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:text="@string/copy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_view" />

    //deklarasi tombol Share
    <Button
        android:id="@+id/btnShare"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:text="@string/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCopy"
        app:layout_constraintTop_toBottomOf="@+id/scanner_view" />

    //deklarasi tombol Save
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCopy" />

</androidx.constraintlayout.widget.ConstraintLayout>